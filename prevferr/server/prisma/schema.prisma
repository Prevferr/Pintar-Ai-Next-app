// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Researcher {
  id           Int       @id @default(autoincrement())
  fistname     String
  lastname     String
  education    String
  scope        String
  research     String
  institution  String
  profileImage String
  email        String    @unique
  password     String
  background   String
  gender       String
  role         String
  portofolio   Jurnal[]
  location     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())
  Comment      Comment[]
  Project      Project[]
}

model Investor {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  fistname      String
  lastname      String
  budget        Int
  profileImage  String
  institution   String
  range_member  String
  industry      String
  industry_type String
  isPremium     Boolean
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
  Comment       Comment[]
  Project       Project[]
  payment       Payment[]
}

model Comment {
  id           Int         @id @default(autoincrement())
  researcher   Researcher? @relation(fields: [researcherId], references: [id])
  comment      String
  investor     Investor?   @relation(fields: [investorId], references: [id])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now())
  researcherId Int?
  Project      Project[]
  investorId   Int?
}

model Project {
  id                   Int         @id @default(autoincrement())
  project_name         String
  description_project  String
  project_image        String
  project_status       Boolean
  starting_date        DateTime
  expected_finish_date DateTime
  project_budget       Int
  tags                 String
  comment              Comment?    @relation(fields: [commentId], references: [id])
  researcher           Researcher? @relation(fields: [researcherId], references: [id])
  investor             Investor?   @relation(fields: [investorId], references: [id])
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @default(now())
  commentId            Int?
  researcherId         Int?
  investorId           Int?
}

model Payment {
  id         Int       @id @default(autoincrement())
  price      Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  Investor   Investor? @relation(fields: [investorId], references: [id])
  investorId Int?
  status     Boolean
  invoice    String
}

model Jurnal {
  id           Int          @id @default(autoincrement())
  abstract     String
  title        String
  description  String
  portofolio   Researcher[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @default(now())
  researcherId Int?
}
